<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="3dp"
    app:cardElevation="1dp"
    android:focusable="true"
    android:clickable="true"
    android:id="@+id/msg_item"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_margin="2dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:gravity="center_vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/head"
            android:id="@+id/img_message_item"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img_message_item"
            android:layout_toRightOf="@+id/img_message_item"
            android:layout_marginLeft="16dp"
            android:text="乐乐"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:id="@+id/message_name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/message_name"
            android:layout_alignBottom="@+id/img_message_item"
            android:layout_below="@+id/message_name"
            android:layout_toLeftOf="@+id/message_num"
            android:gravity="bottom"
            android:text="我希望可以今天中午十二点之前迟到"
            android:textSize="15dp"
            android:textColor="@color/md_grey_600"
            android:singleLine="true"
            android:id="@+id/message_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/message_name"
            android:gravity="bottom"
            android:layout_alignParentRight="true"
            android:text="17:37"
            android:textSize="14dp"
            android:textColor="@color/md_grey_600"
            android:singleLine="true"
            android:id="@+id/message_time"/>
        <TextView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:id="@+id/message_num"
            android:layout_alignBottom="@+id/message_content"
            android:text="1"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@mipmap/circle"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
