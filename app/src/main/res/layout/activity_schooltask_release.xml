<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/school_task_release_toolbar"
        android:background="@color/md_cyan_A400"
        android:clipToPadding="false"
        android:fitsSystemWindows="true"
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="68dp">
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_below="@id/school_task_release_toolbar"
        android:id="@+id/school_task_release_chooseStore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/school_task_release_desimg"
            android:tint="@color/mint_green"
            android:layout_marginStart="16dp"
            android:src="@mipmap/locationgt"
            android:layout_width="23dp"
            android:layout_height="23dp" />
        <TextView
            android:clickable="true"
            android:id="@+id/school_task_release_storename"
            android:layout_centerVertical="true"
            android:textSize="18dp"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@id/school_task_release_desimg"
            android:text="选择商店"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/school_task_release_arrow"
            android:layout_marginEnd="18dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_drop_down"
            android:layout_width="23dp"
            android:layout_height="23dp" />
    </RelativeLayout>


    <ImageView
        android:tint="@color/mint_green"
        android:id="@+id/school_task_release_refundHint"
        android:layout_marginStart="16dp"
        android:layout_marginTop="35dp"
        android:layout_below="@id/school_task_release_chooseStore"
        android:src="@mipmap/refundgt"
        android:layout_width="23dp"
        android:layout_height="23dp"/>
    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_alignBottom="@id/school_task_release_refundHint"
        android:layout_below="@id/school_task_release_chooseStore"
        android:layout_toRightOf="@id/school_task_release_refundHint"
        android:layout_marginRight="15dp"
        android:hint="报酬"
        android:inputType="number"
        android:id="@+id/school_task_release_refund"
        app:met_floatingLabel="highlight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:tint="@color/mint_green"
        android:id="@+id/school_task_release_textHint"
        android:layout_below="@id/school_task_release_refundHint"
        android:layout_marginStart="16dp"
        android:layout_marginTop="35dp"
        android:src="@mipmap/textgt"
        android:layout_width="23dp"
        android:layout_height="23dp" />
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/school_task_release_text"
        android:layout_alignBottom="@id/school_task_release_textHint"
        android:layout_below="@id/school_task_release_refund"
        android:layout_toRightOf="@id/school_task_release_textHint"
        app:met_floatingLabel="highlight"
        android:layout_marginRight="15dp"
        android:hint="详细信息"
        android:inputType="textPhonetic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:tint="@color/mint_green"
        android:id="@+id/school_task_release_remarksHint"
        android:layout_below="@id/school_task_release_textHint"
        android:layout_marginStart="16dp"
        android:layout_marginTop="35dp"
        android:src="@mipmap/textgt"
        android:layout_width="23dp"
        android:layout_height="23dp" />
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/school_task_release_remarks"
        android:hint="备注"
        android:layout_alignBottom="@id/school_task_release_remarksHint"
        android:layout_toRightOf="@id/school_task_release_remarksHint"
        android:layout_below="@id/school_task_release_text"
        app:met_floatingLabel="highlight"
        android:layout_marginRight="15dp"
        android:inputType="textPhonetic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/school_task_release_button"
        android:textColor="@color/white"
        android:text="完成"
        android:textSize="17dp"
        android:background="@color/md_amber_400"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_width="300dp"
        android:layout_height="50dp"/>

</RelativeLayout>